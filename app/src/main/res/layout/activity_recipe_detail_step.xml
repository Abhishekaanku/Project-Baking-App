<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundBlue"
    android:id="@+id/recipeDetailView">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.RecipeDetailStepActivity">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/fragmentRecipeStepDetail"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <Button
            android:id="@+id/buttonPrevRecipeStep"
            android:text="@string/prevButton"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fragmentRecipeStepDetail"
            app:layout_constraintBottom_toBottomOf="parent"
            style="@style/buttonStyle"
            android:background="@drawable/theme_blue"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"/>
        <Button
            android:id="@+id/buttonNextRecipeStep"
            android:text="@string/nextButton"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fragmentRecipeStepDetail"
            app:layout_constraintBottom_toBottomOf="parent"
            style="@style/buttonStyle"
            android:background="@drawable/theme_blue"
            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp"/>
    </android.support.constraint.ConstraintLayout>
</ScrollView>
